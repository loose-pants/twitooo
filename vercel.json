{
  "version": 2,
  "builds": [
    {
      "src": "src/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"  
      }
    },
    {
      "src": "data/server.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "data/server.js"  
    },
    {
      "src": "/(.*)",
      "dest": "dist/$1", 
      "continue": true
    }
  ],
  "rewrites": [
    {
      "source": "/(.*)",
      "destination": "/dist/index.html"  
    }
  ]
}